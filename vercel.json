{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/client/$1"
        }
    ],
    "functions": {
        "server/index.js": {
            "includeFiles": "server/**"
        }
    }
}